{
  "data_collection": {
    "arxiv": {
      "enabled": true,
      "max_results": 30,
      "days_back": 30
    },
    "github": {
      "enabled": true,
      "max_per_query": 20,
      "days_back": 7,
      "min_stars": 100
    }
  },
  "llm": {
    "provider": "openrouter",
    "model": "anthropic/claude-3-sonnet-20240229",
    "base_url": "https://openrouter.ai/api/v1",
    "api_key_env": "OPENROUTER_API_KEY",
    "max_tokens": 1000,
    "temperature": 0.3
  },
  "output": {
    "formats": ["html", "pdf"],
    "output_dir": "outputs"
  },
  "email": {
    "enabled": true,
    "recipient": "873425118@qq.com",
    "send_attachments": true,
    "smtp": {
      "host_env": "SMTP_HOST",
      "port_env": "SMTP_PORT",
      "username_env": "SMTP_USERNAME",
      "password_env": "SMTP_PASSWORD",
      "use_tls": true
    }
  },
  "logging": {
    "level": "INFO",
    "file": "logs/ai_code_digest.log"
  }
}
